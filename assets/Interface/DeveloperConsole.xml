<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />

    <screen id="show" controller="naftoreiclag.villagefive.console.DevConsoleAppState">
        <layer childLayout="center" paddingLeft="10px" paddingTop="10px" paddingBottom="10px" paddingRight="10px" >
            <panel childLayout="vertical" width="80%" height="40%" backgroundColor="#f006" align="left" valign="top">
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="top" length="300" startDelay="0" inherit="true"/>
                </effect>
                
                <panel childLayout="horizontal" paddingLeft="5px" paddingTop="5px" paddingRight="5px">
                    <text font="Interface/Fonts/Default.fnt" text="Developer Console" />
                </panel>
                
                <panel childLayout="horizontal" paddingLeft="5px" paddingTop="5px" paddingRight="5px">
                    <panel id="spacer1" width="10px" backgroundColor="#0008"/>
                    <panel id="output" childLayout="vertical" align="left" backgroundColor="#0008" height="100%">
                        <!--populate-->
                    </panel>
                    <panel id="spacer2" backgroundColor="#0008"/>
                    <control name="verticalScrollbar" align="right"/>
                </panel>
                
                <panel childLayout="horizontal" valign="bottom" paddingLeft="5px" paddingTop="10px" paddingBottom="5px" paddingRight="5px">
                    <control id="input" name="textfield" font="Interface/Fonts/Default.fnt" valight="bottom"/>
                </panel>
                
            </panel>
        </layer>
    </screen>
    
    <screen id="hide">
        <layer />
    </screen>
    
</nifty>